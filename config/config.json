{
    
    "http_port": 3000,
    "app_server_port": 3001,
    
    
    "site_title_default": "тестовый сайт3000",
    
    "dev" : {
      "always_render_less" : 0,
      "log_render_data" : 0
    },
    
    "log": {
        "app": { "filepath": "./temp/log", "level": "info"  },
        "inf": { "filepath": "./temp/log", "level": "trace" },
        "#other log level names: all,trace,debug,info,warn,error,fatal":0
    },
    
    "templates": {
    	"path": "/public/templates"
    },
    
    "link_time": { "//time in seconds!":0,
	"short": 10,
	"long": 10
    },
    
    "db": {                                     
        "connection": "mongodb://localhost",    
        "name": "db_name",                      
        "options": {                            
            "server": {                       
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    
    "session": {
        "secret": "secret_key3000",
        "key": "sid",
        "cookie": {
            "path": "/",
            "httpOnly": true,
            "maxAge": null
        }
    }
}
