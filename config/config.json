{
    
    "port": 3000,
    
    "site_title_default": "тестовый сайт3000",
    
    "log": {
        "app": { "filepath": "./temp/log/app.log", "level": "info"  },
        "inf": { "filepath": "./temp/log/inf.log", "level": "trace" },
        "#other log level names": "all,trace,debug,info,warn,error,fatal"
    },
    
    "templates": {
    	"path": "./views"
    },
    
    "link_time": { "//time in seconds!":0,
	"short": 10,
	"long": 10
    },
    
    "db": {                                     
        "connection": "mongodb://localhost",    
        "name": "db_name",                      
        "options": {                            
            "server": {                       
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    
    "session": {
        "secret": "secret_key3000",
        "key": "sid",
        "cookie": {
            "path": "/",
            "httpOnly": true,
            "maxAge": null
        }
    }
}
