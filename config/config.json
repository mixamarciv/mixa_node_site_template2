{
    
    "http_port": 3000,
    "app_server_port": 3001,
    
    
    "site_title_default": "тестовый сайт3000",
    
    "dev" : {
      "always_render_all" : 0,
      "always_render_css" : 0,
      "always_render_js" : 0,
      "log_render_data" : 0
    },
    
    "less_render" : {
	"use_less": 1,
	"compress": 1,
	"yuicompress": 1
    },
    
    "log": {
        "app": { "filepath": "./temp/log_app", "level": "info"  },
        "child_process": { "filepath": "./temp/log_child_process", "level": "nevajno) (tam budet vse)" },
        "#//other log level names: all,trace,debug,info,warn,error,fatal":0
    },

    "temp_path": "./temp",

    "templates": {
    	"path": "/public/templates"
    },
    
    "link_time": { "#//time in seconds!":0,
	"short": 10,
	"long": 600
    },
    
    "#db - пока не используется": {                                     
        "connection": "mongodb://localhost",    
        "name": "db_name",                      
        "options": {                            
            "server": {                       
                "socketOptions": {
                    "keepAlive": 1
                }
            }
        }
    },
    
    "session": {
	"cookie_name": "sess3000",
        "secret": "secret_key3000",
        "key": "sid",
        "cookie": {
            "path": "/",
            "httpOnly": true,
            "maxAge": null
        }
    }
}
